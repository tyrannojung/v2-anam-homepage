				<options>
					<value>6</value>
					<name xml:lang="ko">6</name>
				</options>
			</var>
			<var id="m_cols_list_count" type="select">
				<name xml:lang="ko">모바일 가로 목록수</name>
				<options>
					<value></value>
					<name xml:lang="ko"></name>
				</options>
				<options>
					<value>1</value>
					<name xml:lang="ko">1</name>
