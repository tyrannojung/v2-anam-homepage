			<title xml:lang="ko">슬라이드 설정</title>
			<var id="use_slider" type="select">
				<name xml:lang="ko">슬라이드 사용</name>
				<description xml:lang="ko">슬라이드로 표시됩니다.</description>
				<options>
					<value></value>
					<name xml:lang="ko">사용안함</name>
				</options>
				<options>
					<value>Y</value>
					<name xml:lang="ko">사용함</name>
				</options>
			</var>
			<var id="slider_height" type="text">
				<name xml:lang="ko">슬라이드 높이</name>
				<description xml:lang="ko">예) 200 (기본값 자동)</description>
			</var>
			<var id="slider_height_popup" type="text">
				<name xml:lang="ko">팝업 슬라이드 높이</name>
				<description xml:lang="ko">예) 500 (기본값 500)</description>
			</var>
		</group>
		<group>
			<title xml:lang="ko">썸네일</title>
			<var id="thumbnail_type" type="select">
				<name xml:lang="ko">썸네일 생성 방법</name>
				<description xml:lang="ko">썸네일 생성 방법을 선택할 수 있습니다.</description>
				<options>
					<value>fill</value>
