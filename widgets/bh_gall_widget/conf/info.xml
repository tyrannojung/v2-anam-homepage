				<name xml:lang="ko">비밀글 표시</name>
				<options>
					<value></value>
					<name xml:lang="ko">비밀글 제외</name>
				</options>
				<options>
					<value>Y</value>
					<name xml:lang="ko">비밀글 표시</name>
				</options>
			</var>
			<var id="view_notice" type="select">
				<name xml:lang="ko">공지사항 표시</name>
				<options>
					<value></value>
					<name xml:lang="ko">모두 표시</name>
				</options>
				<options>
					<value>N</value>
					<name xml:lang="ko">공지사항 제외</name>
				</options>
				<options>
					<value>Y</value>
					<name xml:lang="ko">공지사항만</name>
				</options>
			</var>
		</group>
		<group>
			<title xml:lang="ko">페이지 설정</title>
			<var id="page_count" type="select">
				<name xml:lang="ko">페이지 수</name>
