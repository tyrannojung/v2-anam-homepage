				</options>
				<options>
					<value>Y</value>
					<name xml:lang="ko">사용함</name>
				</options>
			</var>
			<var id="search_keyword" type="text">
				<name xml:lang="ko">검색어</name>
				<description xml:lang="ko">제목 + 내용이 검색됩니다.</description>
			</var>
			<var id="search_keyword_extra" type="text">
				<name xml:lang="ko">확장변수 검색어</name>
				<description xml:lang="ko">모든 확장변수 값이 포함 검색됩니다.</description>
			</var>
		</group>
