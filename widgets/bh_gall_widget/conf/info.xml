					<name xml:lang="ko">등록일</name>
				</options>
				<options init="true">
					<value>nickname</value>
					<name xml:lang="ko">글쓴이</name>
				</options>
				<options init="true">
					<value>category</value>
					<name xml:lang="ko">카테고리</name>
				</options>
				<options init="true">
					<value>button</value>
					<name xml:lang="ko">버튼</name>
				</options>
			</var>
		</group>
		<group>
			<title xml:lang="ko">내용 설정</title>
			<var id="subject_cut_size" type="text">
				<name xml:lang="ko">제목 글자수</name>
			</var>
			<var id="content_cut_size" type="text">
				<name xml:lang="ko">내용 글자수</name>
			</var>
			<var id="nickname_cut_size" type="text">
				<name xml:lang="ko">닉네임 글자수</name>
